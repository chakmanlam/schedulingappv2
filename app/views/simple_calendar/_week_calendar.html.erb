
<div class="simple-calendar max-w-5xl mx-auto mt-10">
  <div class="calendar-heading flex justify-between items-center mb-4">
    <span class="calendar-title text-xl font-semibold">
      <%= t('simple_calendar.week', default: 'Week') %> <%= calendar.week_number %>
      <% if calendar.number_of_weeks > 1 %>
        - <%= calendar.end_week %>
      <% end %>
    </span>

    <nav class="space-x-4">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: "text-blue-500 hover:underline" %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: "text-blue-500 hover:underline" %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: "text-blue-500 hover:underline" %>
    </nav>
  </div>

  <table class="table-auto w-full border-collapse border border-gray-300">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="px-4 py-2 border border-gray-300 bg-gray-100"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: "#{calendar.td_classes_for(day)} px-4 py-2 border border-gray-300 align-top" do %>
              <div class="text-sm font-medium text-right"><%= day.day %></div>
              <div class="mt-2">
                <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
              </div>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
